<% layout("/layouts/boilerplate") %>
<%= success %>
   
    <h3>All Listings</h3>
    <!--commented this out bcoz added this option in navbar to add new listing-->
    <!-- <form method="GET" action="/listings/new">
        <button>Create New Listing</button>
    </form> -->


    <!--dont need this separate listing further as listing is now done inside individual cards-->
    <!-- <ul>
        <% for(let listing of allListings) { %>
        <li><a href="/listings/<%= listing._id %>"> <%= listing.title %> </a></li>
        <% } %>
    </ul> -->



    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1"> <!--row-cols-lg-3 ek row ke ander jitne bhi cols hai large screen size me (defined on bootstrap) minimum 3 card ek line ke ander dikayi denge -->
        <% for(let listing of allListings) { %> <!--for jaise jaise run karega hamare liye waise cards create honge-->
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card col listing-card"> <!--style="width: 20rem;" removed this width so that img can fit properly-->
                    <img 
                    src="<%= listing.image %>" 
                    class="card-img-top" 
                    alt="listing_image" 
                    style="height: 20rem;"
                    />
                    <!--Used to print anything on card-->
                    <div class="card-img-overlay"></div> <!--iss class ko use kr ke ham cards ke upar kuch likh ya dikha sakte hain-->
                    <div class="card-body">
                        <p class="card-text"> 
                            <b><%= listing.title %></b><br>
                            &#8377;<%= listing.price.toLocaleString("en-IN") %> / night
                        </p>
                    </div>
                </div>
            </a>
            
        <% } %>
    </div>

   


