<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-3 ">
        
        <h3><%= listing.title %></h3>
    </div>
    <div class="card col-6 offset-3 show-card">
        <img src="<%=listing.image %>" class="card-img-top show-img" alt="listing_image">
        <div class="card-body">
            <p class="card-text">
             
             <%= listing.description %> <br>
             &#8377; <%= listing.price.toLocaleString("en-IN") %> <br>
             <%= listing.location %> <br>
             <%= listing.country %>
            </p>
        </div>
    </div>


    <!-- commented this ul bcoz its content is added inside card for better styling -->
    <!-- <ul>
        <li><%= listing.title %></li>
        <li><%= listing.description %></li>
        <li>&#8377; <%= listing.price.toLocaleString("en-IN") %></li>
        <li><%= listing.location %></li>
        <li><%= listing.country %></li>
    </ul> -->
    <br>
    <div class="btns">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>

        <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
            <button class="btn btn-dark offset-5">Delete</button>
        </form>
    </div>

    <div class="col-8 offset-3 ">
        <hr>
        <h4>Leave a Review</h4>
        <form>
            <div>
                <lable for="rating" class="form-label">Rating</lable>
                <input type="range" min="1" max="5" id="rating" name="review[rating]">
            </div>
            <div>
               <lable for="comment" class="form-label">Comments</lable> 
               <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control"></textarea>
            </div>
            <button class="btn btn-outline-dark">Submit</button>
        </form>
    </div>

</div>